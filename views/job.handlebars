<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h1 class="card-title">Job Trax Log Information</h1>
          <hr/>
          <p>
            <strong>Title</strong>: {{job.title}}
          </p>
          <p>
            <strong>Company</strong>: {{job.company}}
          </p>
          <p>
            <strong>Job Details URL: </strong><a href={{job.description}}> {{job.title}}</a>
          </p>
          <p>
            <strong>Action Date: {{job.close_by}} </strong>
          </p>

          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
              <button id="email-button" type="button" class="btn btn-default btn-md" value="{{job.job_id}}">
                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Email
              </button>
            </div>
            <div class="btn-group" role="group">
              <button id="phone-button" type="button" class="btn btn-default btn-md" value="{{job.job_id}}">
                <span class="glyphicon glyphicon-phone" aria-hidden="true"></span> Call
              </button>
            </div>
            <div class="btn-group" role="group">
              <button id="interview-button" type="button" class="btn btn-default btn-md" value="{{job.job_id}}">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Interview
              </button>
            </div>
          </div>

          <h3>Job Trax Time Log:</h3>
          <p>
            {{#each action}}
              <li>{{this.action_type}}</li>
              <li>{{this.comments}}</li>
              <li>{{this.updatedAt}}</li>
            {{/each}}
            </p>
          <hr />
          <a href="/index">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>
<script src="/js/jobs.js"></script>